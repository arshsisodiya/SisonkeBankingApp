<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sisonkebank.bankingapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/sisonkelogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/sisonkelogo"
        android:supportsRtl="true"
        android:fullBackupContent="@xml/backup_descriptor"
        android:theme="@style/AppTheme">
        <activity android:name="com.sisonkebank.bankingapp.RegisterActivity" />
        <activity android:name="com.sisonkebank.bankingapp.AccountTransferActivity" />
        <activity android:name="com.sisonkebank.bankingapp.AccountBalanceActivity" />
        <activity android:name="com.sisonkebank.bankingapp.MainPageActivity" />
        <activity android:name="com.sisonkebank.bankingapp.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>