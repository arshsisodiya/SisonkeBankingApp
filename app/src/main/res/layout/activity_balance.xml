<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountBalanceActivity">


    <TextView
        android:id="@+id/lblViewAccountBalanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/ViewAccountBalanceTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblAccountHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/AccountHolderName"
        app:layout_constraintBaseline_toBaselineOf="@+id/txtHolderName"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtHolderName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.306"
        app:layout_constraintStart_toEndOf="@+id/lblAccountHolderName"
        app:layout_constraintTop_toBottomOf="@+id/lblViewAccountBalanceTitle" />

    <TextView
        android:id="@+id/lblAccountHolderSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/AccountHolderSurname"
        app:layout_constraintStart_toStartOf="@+id/lblAccountHolderName"
        app:layout_constraintTop_toBottomOf="@+id/lblAccountHolderName" />

    <TextView
        android:id="@+id/txtHolderSurname"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblAccountHolderSurname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.224"
        app:layout_constraintStart_toEndOf="@+id/lblAccountHolderSurname" />

    <TextView
        android:id="@+id/lblCurrentAccountBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/CurrentAccountBalance"
        app:layout_constraintStart_toStartOf="@+id/lblAccountHolderSurname"
        app:layout_constraintTop_toBottomOf="@+id/lblAccountHolderSurname" />

    <TextView
        android:id="@+id/txtCurrentBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblCurrentAccountBalance"
        app:layout_constraintEnd_toEndOf="@+id/txtHolderSurname"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/lblCurrentAccountBalance" />

    <TextView
        android:id="@+id/lblSavingsAccountBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/SavingsAccountBalance"
        app:layout_constraintStart_toStartOf="@+id/lblCurrentAccountBalance"
        app:layout_constraintTop_toBottomOf="@+id/lblCurrentAccountBalance" />

    <TextView
        android:id="@+id/txtSavingsBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/lblSavingsAccountBalance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toEndOf="@+id/lblSavingsAccountBalance" />

</androidx.constraintlayout.widget.ConstraintLayout>